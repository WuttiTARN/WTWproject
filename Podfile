# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

target 'WTW' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    # Pods for WTW
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    
    pod 'FBSDKCoreKit'
    pod 'FBSDKShareKit'
    pod 'FBSDKLoginKit'
    pod 'Kingfisher', '~> 3.0'
    
    target 'WTWTests' do
        inherit! :complete
        # Pods for testing
    end
    
    target 'WTWUITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
